  </div>
</header>
        <!-- <div class="sign_text">
            <i class="fa fa-user"></i><a href="sign-in.html"> Sign In</a> or <a href="sign-up.html">Create Account</a>
        </div> -->
    </nav>
    <div class="jumbotron top">
        <div class="col-md-7">
            <h1>Author</h1>
        </div>
        <div class="col-md-5 blank_space">

        </div>
    </div>

    <div class="container main">
        
        <hr>
        <div class="sign_up">
            <div class="col-md-8">
                <form class="form-horizontal" id="myForm" onsubmit="return book_validate()">
                    
                    <div class="form-group">
                        <label class="col-md-3">Author Name <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="book_error_author_name"></small>
                            <input type="text" class="form-control" id="book_author_name" onblur="book_validate_autor_name(this.value)" placeholder="Enter Author Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3">Genre <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="book_error_genre"></small>
                            <select type="text" class="form-control" id="book_genre" onblur="book_validate_genre(this.value)" placeholder="Select Genre">
                            <option value="">--Select--</option> 
                            <option value="Adventure">Adventure</option> 
                            <option value="Art">Art</option>
                            <option value="Children’s">Children’s</option>
                            <option value="Contemporary">Contemporary</option>
                            <option value="Cooking">Cooking</option>
                            <option value="Development">Development</option>
                            <option value="Dystopian">Dystopian</option>
                            <option value="Families & Relationships">Families & Relationships</option>
                            <option value="Fantasy">Fantasy</option>
                            <option value="Guide">Guide</option>
                            <option value="Health">Health</option>
                            <option value="Historical fiction">Historical fiction</option>
                            <option value="History">History</option>
                            <option value="Horror">Horror</option>
                            <option value="Humor">Humor</option>
                            <option value="Memoir">Memoir</option> 
                            <option value="Motivational">Motivational</option> 
                            <option value="Mystery">Mystery</option> 
                            <option value="Paranormal">Paranormal</option>  
                            <option value="Romance">Romance</option> 
                            <option value="Science Fiction">Science Fiction</option> 
                            <option value="Personal">Personal</option> 
                            <option value="Thriller">Thriller</option> 
                            <option value="Travel">Travel</option> 
                                                       </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3">Description <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="book_error_description"></small>
                            <textarea class="form-control address_field" id="book_description" placeholder="Description" onblur="book_validate_description(this.value)"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3">Author Image <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="book_error_image"></small>
                            <input type="file" class="form-control " id="book_image" onblur="author_validate_image(this.value)">
                        </div>
                    </div>









                    <div class="form-group">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary submit_button">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>

    <!-- Success Modal -->
    <div id="modal_add_book" class="modal">
        <div class="modal-content">
            <div>
                <span class="close">&times;</span>
            </div>
            
            <div class="success_h1">
                <h1> Details Added Successfully</h1>
            </div>
            <br>
            <a class="success_btn" href="/authors"><button class="btn btn-primary">View List</button></a>
        </div>

    </div>

    <footer>
        <div class="container">
            <h1>Follow Us</h1>
            <div class="social_icon">
                <button class="btn btn-info">Twitter</button>
                <button class="btn btn-primary">Facebook</button>
                <button class="btn btn-danger">Google+</button>
            </div>
        </div>


    </footer>
    <script src="js/form.js"></script>
</body>

</html>